{
  "name": "create-react-app",
  "version": "1.0.0",
  "main": "index.js",
  "author": "wood </>",
  "license": "MIT",
  "scripts": {
    "start": "webpack-dev-server --config=./web.webpack.config.js --mode=development",
    "build:redux:web": "webpack --config=./web.webpack.config.js --output-public-path=/statics/ app.redux=./src/redux/web.index.jsx",
    "build:context:web": "webpack --config=./web.webpack.config.js --output-public-path=/statics/ app.context=./src/context/web.index.jsx",

    "build:redux:web:dev": "yarn build:redux:web --mode=development",
    "build:context:web:dev": "yarn build:context:web --mode=development",

    "build:redux:web:pro": "yarn build:redux:web --mode=production",
    "build:context:web:pro": "yarn build:context:web --mode=production",

    "build:redux:node": "webpack --config=./node.webpack.config.js --output-public-path=/statics/ app.redux=./src/redux/node.index.jsx",
    "build:context:node": "webpack --config=./node.webpack.config.js --output-public-path=/statics/ app.context=./src/context/node.index.jsx",

    "build:redux:node:dev": "yarn build:redux:node --mode=development",
    "build:context:node:dev": "yarn build:context:node --mode=development",

    "build:redux:node:pro": "yarn build:redux:node --mode=production",
    "build:context:node:pro": "yarn build:context:node --mode=production",

    "build:redux:all:dev": "yarn build:redux:web:dev && yarn build:redux:node:dev",
    "build:context:all:dev": "yarn build:context:web:dev && yarn build:context:node:dev",
    "eslint": "eslint -c ./.eslintrc.js --ext .js --ext .jsx --no-ignore '.eslintrc.js' .eslintrc.js .",
    "pm2": "pm2 kill && pm2 start && pm2 monit"
  },
  "dependencies": {
    "@babel/core": "^7.5.5",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/preset-react": "^7.0.0",
    "abab": "^2.0.2",
    "babel-eslint": "^10.0.2",
    "babel-loader": "^8.0.6",
    "babel-plugin-styled-components": "^1.10.6",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.24",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^5.0.4",
    "eslint": "^6.1.0",
    "eslint-loader": "^2.2.1",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-react-hooks": "^1.6.1",
    "html-webpack-plugin": "^3.2.0",
    "localforage": "^1.7.3",
    "lodash-es": "^4.17.15",
    "luxon": "^1.17.2",
    "morgan": "^1.9.1",
    "node-fetch": "^2.6.0",
    "npm-check-updates": "^3.1.20",
    "nyc": "^14.1.1",
    "pm2": "^4.1.2",
    "polka": "^0.5.2",
    "prop-types": "^15.7.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-redux": "^7.1.0",
    "redux": "^4.0.4",
    "redux-logger": "^3.0.6",
    "redux-thunk": "^2.3.0",
    "selfsigned": "^1.10.4",
    "serve-static": "^1.14.1",
    "styled-components": "^4.3.2",
    "uuid": "^3.3.2",
    "webpack": "^4.38.0",
    "webpack-bundle-analyzer": "^3.4.1",
    "webpack-cli": "^3.3.6",
    "webpack-dev-server": "^3.7.2",
    "webpack-manifest-plugin": "^2.0.4",
    "webpack-node-externals": "^1.7.2",
    "workbox-build": "^4.3.1",
    "workbox-webpack-plugin": "^4.3.1"
  }
}
